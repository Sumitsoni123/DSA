#include <bits/stdc++.h>
using namespace std;

int main() {
    
    int n;
    cin >> n;

    // write your code here
    
    for(int i=1; i<=n; i++)
    {
        for(int j=1; j<=n; j++)
        {
            if(i == j)
                cout<<"*	";
            else if(j <i )
                cout<<"	";
        }
        
        cout<<endl;
    }
    
    return 0;
}

// output
*	
	*	
		*	
			*	
				*	
